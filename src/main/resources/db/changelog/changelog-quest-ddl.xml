<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="3" author="Alexey Lavrinovich">
        <createTable tableName="_quest">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="prize" type="DOUBLE PRECISION" >
                <constraints nullable="false"/>
            </column>
            <column name="creator_id" type="bigint" >
                <constraints foreignKeyName="creator_id_fk" references="_user" nullable="false"/>
            </column>
            <column name="executor_id" type="bigint" >
                <constraints foreignKeyName="executor_id_fk" references="_user" nullable="true"/>
            </column>
            <column name="item_id" type="bigint" >
                <constraints foreignKeyName="item_id_fk" references="_item" nullable="true"/>
            </column>
            <column name="target_id" type="bigint" >
                <constraints foreignKeyName="target_id_fk" references="_user" nullable="true"/>
            </column>
            <column name="type" type="varchar(512)" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>